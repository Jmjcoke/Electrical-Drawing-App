# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# AI Provider API Keys (Server-side only)
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Azure Computer Vision
# Create a Computer Vision resource in Azure Portal: https://portal.azure.com
AZURE_COMPUTER_VISION_KEY=
AZURE_COMPUTER_VISION_ENDPOINT=

# Google Cloud Vision API
# Enable Vision API and create credentials: https://console.cloud.google.com/apis/library/vision.googleapis.com
GOOGLE_CLOUD_VISION_API_KEY=

# Custom ML Model Endpoint (Optional)
CUSTOM_ML_ENDPOINT=
CUSTOM_ML_API_KEY=

# Feature Flags (for client-side feature detection)
# Set these to "true" when you have configured the corresponding API keys
NEXT_PUBLIC_OPENAI_CONFIGURED=false
NEXT_PUBLIC_AZURE_CV_CONFIGURED=false
NEXT_PUBLIC_GOOGLE_CV_CONFIGURED=false