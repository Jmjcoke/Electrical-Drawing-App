# ELECTRICAL ORCHESTRATOR - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME="Electrical Orchestrator"
APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/electrical_orchestrator
DB_HOST=localhost
DB_PORT=5432
DB_NAME=electrical_orchestrator
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters
JWT_PUBLIC_KEY=your-rsa-public-key
JWT_PRIVATE_KEY=your-rsa-private-key
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session management
SESSION_SECRET=your-session-secret-key
CSRF_SECRET=your-csrf-secret-key

# =============================================================================
# ENTERPRISE SSO CONFIGURATION
# =============================================================================
# SAML Configuration
SAML_METADATA_URL=https://your-company.com/saml/metadata
SAML_ENTITY_ID=electrical-orchestrator
SAML_ACS_URL=https://your-domain.com/auth/saml/callback
SAML_CERTIFICATE_PATH=/path/to/saml/certificate.pem

# LDAP Configuration
LDAP_SERVER_URL=ldap://your-ldap-server.com:389
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_DN=cn=service-account,ou=users,dc=company,dc=com
LDAP_BIND_PASSWORD=ldap-service-password
LDAP_USER_FILTER=(sAMAccountName={username})

# =============================================================================
# AWS SERVICES CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# S3 Storage
S3_BUCKET_NAME=electrical-orchestrator-storage
S3_BUCKET_REGION=us-west-2

# AWS AI Services
AWS_TEXTRACT_REGION=us-west-2
AWS_REKOGNITION_REGION=us-west-2

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Frontend API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_STORAGE_URL=https://storage.electrical-orchestrator.com

# Backend service URLs (internal microservices)
PDF_PROCESSING_SERVICE_URL=http://localhost:8001
AI_ANALYSIS_SERVICE_URL=http://localhost:8002
ESTIMATION_SERVICE_URL=http://localhost:8003
HISTORICAL_DATA_SERVICE_URL=http://localhost:8004
PROGRESS_TRACKING_SERVICE_URL=http://localhost:8005

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Log levels
LOG_LEVEL=info
DEBUG=false

# =============================================================================
# EMAIL CONFIGURATION (for password reset, notifications)
# =============================================================================
SMTP_HOST=smtp.your-company.com
SMTP_PORT=587
SMTP_USERNAME=noreply@your-company.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@electrical-orchestrator.com

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test database (separate from main DB)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/electrical_orchestrator_test

# Mock external services in development
MOCK_AWS_SERVICES=true
MOCK_SAML_PROVIDER=true
MOCK_LDAP_SERVER=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# AI/ML API KEYS
# =============================================================================
# OpenAI API key for advanced OCR and text extraction
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Computer Vision API key for symbol detection (Azure Computer Vision)
# Get your API key from: https://portal.azure.com/#create/Microsoft.CognitiveServicesComputerVision
COMPUTER_VISION_API_KEY=your-computer-vision-api-key
COMPUTER_VISION_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/

# Google Cloud Vision API (Alternative to Azure)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key

# Custom ML Model Endpoint (Optional)
# For self-hosted or custom ML models
CUSTOM_ML_MODEL_ENDPOINT=https://your-ml-model-endpoint.com
CUSTOM_ML_MODEL_API_KEY=your-custom-ml-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DETAILED_LOGGING=true
ENABLE_API_DOCUMENTATION=true